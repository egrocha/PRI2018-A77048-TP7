extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-red
                h3 Lista de Ficheiros
            .w3-container
                br
                table.w3-table-all
                    tr
                        th Filename
                        th Descrição
                    each f in lista
                        tr
                            td
                                a(href='/uploaded/'+f.nome)= f.nome
                            td= f.desc
                p
                    a(href="/") Voltar
            footer.w3-container.w3-red
                address Gerado por fichApp
