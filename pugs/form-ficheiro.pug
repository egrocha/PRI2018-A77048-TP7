extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-red
                h3 Registo de Ficheiros
            .w3-container
                form.w3-container(action='/processaForm', method='POST', enctype='multipart/form-data')
                    label.w3-text-red
                        b Ficheiro
                    input.w3-input.w3-border.w3-light-grey(type='file', name='ficheiro')
                    label.w3-text-red
                        b Descrição
                    input.w3-input.w3-border.w3-light-grey(type='text', name='desc')
                    br
                    input.w3-btn.w3-grey(type='submit', value='Enviar')
                    br
                    br
                    a(href='/ficheiros') Lista de Ficheiros
            footer.w3-container.w3-red
                address Gerado por fichApp
